<odoo>
    <data>
        <record id="product_category_form_view_inherited" model="ir.ui.view">
            <field name="name">product.category.form.inherited</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="location_address" placeholder="Enter the website address here..."/>
                </xpath>
            </field>
        </record>

        <record id="product_category_list_view_custom" model="ir.ui.view">
            <field name="name">product.category.list.custom</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_list_view"/>
            <field name="arch" type="xml">
                <xpath expr="//list/field[@name='display_name']" position="after">
                    <field name="location_address"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
